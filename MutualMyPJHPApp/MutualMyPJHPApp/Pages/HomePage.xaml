<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="MutualMyPJHPApp.Pages.HomePage"
             BackgroundColor="White"
             Title="Mutual M. y P.J.H.P."
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
  <StackLayout VerticalOptions="Start"
               HorizontalOptions="Center"
               Padding="20">
    <Image WidthRequest="350"
           Source="logo.jpg"></Image>
    <Label Text=""
           TextColor="Blue"
           FontAttributes="Bold"
           FontSize="Large"
           VerticalOptions="Center"
           HorizontalOptions="Center"></Label>
    <Label Text="Bienvenido/a"
           TextColor="Blue"
           FontAttributes="Bold"
           FontSize="Large"
           VerticalOptions="Center"
           HorizontalOptions="Center"></Label>
    <Label Text="{Binding CurrentUser.Beneficiario, Mode=TwoWay}"
           FontSize="Large"
           TextColor="Blue"
           FontAttributes="Bold"
           VerticalOptions="Center"
           HorizontalOptions="Center"></Label>
    
    <Label Text="{Binding CurrentUser.Email, Mode=TwoWay}"
           FontSize="Medium"
           TextColor="Black"
           FontAttributes="Bold"
           VerticalOptions="Center"
           HorizontalOptions="Center"></Label>
  </StackLayout>
</ContentPage>